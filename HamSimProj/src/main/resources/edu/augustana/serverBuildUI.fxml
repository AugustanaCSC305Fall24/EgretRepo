<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="445.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.UI.ServerBuildController">
   <children>
      <VBox layoutY="-1.0" prefHeight="442.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="540.0">
               <children>
                  <Label alignment="CENTER" prefHeight="58.0" prefWidth="75.0" text="Server ID:" />
                  <TextField fx:id="scenarioNameField" promptText="Use 4 digits max" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="136.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="457.0" text="Server Description" />
                  <TextArea fx:id="userMessageField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="95.0" prefWidth="509.0" promptText="Create a description for the server">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextArea>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </VBox>
            <Label prefHeight="35.0" prefWidth="600.0" text="Scenario Variables">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="540.0">
               <children>
                  <Label alignment="CENTER" prefHeight="58.0" prefWidth="86.0" text="Time:" />
                  <TextField fx:id="timeField" prefHeight="39.0" prefWidth="93.0" promptText="00:00 24h" />
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="138.0" prefWidth="79.0" text="Wind Speed" />
                  <TextField fx:id="windSpeedField" prefHeight="41.0" prefWidth="87.0" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="540.0">
               <children>
                  <Label alignment="CENTER" prefHeight="58.0" prefWidth="85.0" text="Temperature:" />
                  <TextField fx:id="tempField" prefHeight="37.0" prefWidth="92.0" promptText="Celcius" />
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="138.0" prefWidth="79.0" text="Solar Index" />
                  <TextField fx:id="solarIndex" prefHeight="37.0" prefWidth="85.0" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="540.0">
               <children>
                  <Label alignment="CENTER" prefHeight="58.0" prefWidth="89.0" text="Humidity:" />
                  <TextField fx:id="humidityField" prefHeight="41.0" prefWidth="94.0" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="57.0" prefWidth="600.0" spacing="15.0">
               <children>
                  <Button fx:id="createServerBtn" mnemonicParsing="false" text="Create Server" />
                  <Button fx:id="cancelBtn" mnemonicParsing="false" text="Cancel" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
